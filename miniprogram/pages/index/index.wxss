.swiper {
  width: 100%;
  height: 100vh;
}

.swiper image {
  height: 100%;
  width: 100%;
}

.swiper-float-content {
  pointer-events: none;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.swiper-float-content .title{
  margin-top: 280rpx;
  font-size: 80rpx;
  font-weight: bold;
}

.swiper-float-content .descriptions-area{
  margin-top: 680rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 76%;
  justify-content: space-between;
}

.swiper-float-content .descriptions-area .description{
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #ffffff;
}

.swiper-float-content .descriptions-area .description .description-title{
  font-size: 40rpx;
  margin-bottom: 12rpx;
  animation: fadeIn 1s;
}

.swiper-float-content .descriptions-area .description .description-subtitle{
  font-size: 25rpx;
  animation: fadeIn 2s;
}

.swiper-float-content .action-btn{
  margin-top: 54rpx;
  width: 655rpx;
  height: 74rpx;
  color: #ffffff;
  background-color: rgba(0, 0, 0, 0.4);
  border-radius: 34rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 74rpx;
  font-size: 25rpx;
}

.swiper-float-content .view-config{
  margin-top: 24rpx;
  font-size: 25rpx;
  color: #ffffff;
  text-decoration: underline;
}

.swiper-float-content .swiper-dots{
  display: flex;
  flex-direction: row;
}

.swiper-dots .dot {
  margin-top: 56rpx;
  width: 40rpx;
  height: 4rpx;
  background-color: rgba(255, 255, 255, 0.4);
}

.swiper-dots .dot.active {
  background-color: rgba(255, 255, 255, 1);
}

@keyframes fadeIn{
  0% {
    opacity: 0;
  }

  100% {
    opacity: 1;
  }
}